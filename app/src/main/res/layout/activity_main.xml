<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.squad.betakua.tap_neko.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer Panel" />

    <Button
        android:id="@+id/audio-recorder-button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audio recorder"/>

    <Button
        android:id="@+id/nfc-button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nfc tapper"/>

    <Button
        android:id="@+id/audio-player-button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="audio player"/>
    <Button
        android:id="@+id/list-button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view list"/>

</LinearLayout>
